<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.ui.view" id="employee_probation_inherit_view">
        <field name="name">employee.probation.form.inherit.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="status_employee"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="employee_probation_inherit_view_kanban">
        <field name="name">employee.probation.form.inherit.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <field name="job_title" position="after">
                <span class="o_kanban_record_subtitle"><field name="status_employee"/></span>
<!--                <field name="status_employee"/>-->
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="employee_probation_inherit_view_tree">
        <field name="name">employee.probation.form.inherit.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="coach_id" position="after">
                <field name="status_employee"/>
            </field>
        </field>
    </record>

    <!--                Form View                    -->
    <record id="hr_recruitment_probation_period_form_view" model="ir.ui.view">
        <field name="name">hr.recruitment.probation.period.form</field>
        <field name="model">employee.probation.period</field>
        <field name="arch" type="xml">
            <form string="hr.recruitment.probation.period.form.view">
                <header>
                    <button name="set_probation_plan" type="object" string="Set Probation Plan"  class="oe_highlight"
								states="draft"/>
                    <button name="action_review_wizard"
                            string="Send Review"
                            class="oe_edit_only"
                            type="object"
                            states="waiting approval,done"/>

                    <button name="refuse" type="object" string="refuse"  class="oe_highlight"
								/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,
                           waiting approval,
                           done,
                           refuse"
						/>
                </header>
                <sheet>
                    <h1 style="color: blue;">Employee Information</h1>
                    <group>
                        <group>
                            <field name="refuse_check" invisible="1"/>
                            <field name="employee_id" attrs="{'readonly': [('refuse_check','=', False)]}"/>
                            <field name="line_manager" readonly="1"/>
                            <field name="head_of_function" readonly="1"/>
                            <field name="check" invisible="1"/>
                            <field name="employment_status"  attrs="{'invisible':[('check','=',False)]}"/>
                            <field name="progress_rate" widget="priority" attrs="{'readonly': [('refuse_check','=', False)]}"/>
                        </group>
                        <group>
                            <field name="contract" attrs="{'readonly': [('refuse_check','=', False)]}"/>
                            <field name="department" readonly="1"/>
                            <field name="job_position" readonly="1"/>
                            <field name="join_date" attrs="{'readonly': [('refuse_check','=', False)]}"/>
                            <field name="probation_complete_date" attrs="{'readonly': [('refuse_check','=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Plan" readonly="1">
                            <field name="plan_data" readonly="1"/>
                        </page>
                        <page string="Review" readonly="1">
                            <field name="get_review" readonly="1"/>
                        </page>
                        <page string="Extra Information" readonly="1">

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--                Tree View                    -->
    <record id="hr_recruitment_probation_period_tree_view" model="ir.ui.view">
        <field name="name">hr.recruitment.probation.period.tree</field>
        <field name="model">employee.probation.period</field>
        <field name="arch" type="xml">
            <tree string="hr.employee.exit.resignation Tree">
                <field name="employee_id" />
                <field name="line_manager" />
                <field name="head_of_function" />
                <field name="department" />
                <field name="job_position" />
                <field name="join_date" />
				</tree>
			</field>
		</record>

    <!--                Search View                    -->
    <record id="hr_recruitment_probation_period_search" model="ir.ui.view">
			<field name="name">hr.recruitment.probation.period.search</field>
			<field name="model">employee.probation.period</field>
			<field name="arch" type="xml">
				<search string="hr.employee.exit.resignation search">
                    <field name="employee_id" />
                    <field name="line_manager" />
                    <field name="head_of_function" />
                    <field name="department" />
                    <field name="job_position" />
                    <field name="join_date" />
                    <group>
                        <filter string="Department" name="department" domain="[]" context="{'group_by':'department'}"/>
                    </group>

				</search>
			</field>
		</record>
    <!--                Root Action View                    -->
    <record id="action_hr_recruitment_probation_period" model="ir.actions.act_window">
        <field name="name">Probation Plan</field>
        <field name="res_model">employee.probation.period</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hr_recruitment_probation_period_search"/>
        <field name="view_id" ref="hr_recruitment_probation_period_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                employee.probation.period
            </p>
        </field>
    </record>

</odoo>
