<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_employee_probation" model="mail.template">
            <field name="name">Employee Plan: Send by email</field>
            <field name="model_id" ref="openhcm_employee_probation.model_employee_probation_period"/>
            <field name="subject"> Probation Plan( Ref ${object.name})</field>
            <field name="email_from">${(object.responsible_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="email_to">${object.user_email}</field>
            <field name="body_html" type="html">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            Hello ${object.name}
                            <br /> <br/>
                            Your probation period End at date ${object.probation_complete_date}
                            <br /> <br/>
                            Regards,
                            <br /> <br/>
                            ${object.current_user}
                        </p>
                    </div>
            </field>
        </record>
    </data>
</odoo>