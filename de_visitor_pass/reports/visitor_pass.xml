    <template id="report_pass">
<!--         <t t-call="web.external_layout">-->
<!--             <t t-call="web.html_container">-->
        <t t-call="web.html_container">
				<t t-call="web.external_layout">
                    <div class="page">
                        <div t-foreach="docs" t-as="doc">


                                 <h1> <t t-esc="doc.name"/></h1>


                                  <p style="margin:0;float:left"><b>Check In :</b><t t-esc="doc.check_in"/></p>
                                  <p style="margin:0;float:right"><b>Check Out :</b> <t t-esc="doc.check_out"/></p>

                                 <table class="table table-condensed" style="width:100%;text-align:center">
                                        <tr>
                                            <th colspan="2">
                                                <center><h1>Visitor Detail</h1></center>
                                            </th>
                                        </tr>
                                       <tr>
                                           <th style="width:200px;">
                                               <h3>Name</h3>

                                           </th>
                                           <th style="background-color:white;text-align:left;">
                                               <t t-esc="doc.det_name"/>

                                           </th>

                                       </tr>
                                        <tr>
                                            <th>
                                                <h3>Company</h3>

                                           </th>
                                           <th style="background-color:white;text-align:left;">
                                               <t t-esc="doc.det_company"/>

                                           </th>

                                       </tr>
                                        <tr>
                                            <th>
                                                    <h3>Phone</h3>
                                           </th>
                                           <th style="background-color:white;text-align:left;">
                                                <t t-esc="doc.phone_no"/>
                                           </th>

                                       </tr>
                                        <tr>
                                            <th>
                                                <h3>Mail</h3>

                                           </th>
                                           <th style="background-color:white;text-align:left;">
                                               <t t-esc="doc.mail"/>

                                           </th>

                                       </tr>
                                </table>

                             <table class="table table-condensed" style="width:45%;float:left;">
                                 <tr>
                                        <th colspan="2">
                                          <center>
                                              <center><h1>Visit Detail</h1></center>
                                          </center>
                                        </th>
                                 </tr>
                                 <tr>
                                       <th style="width:150px;">
                                           <h3>Destination</h3>

                                       </th>
                                       <th style="background-color:white">
                                           <t t-esc="doc.des"/>

                                       </th>

                                 </tr>
                                 <tr>
                                        <th>
                                            <h3>Duration</h3>

                                       </th>
                                       <th style="background-color:white">
                                           <t t-esc="doc.dur.name"/>

                                       </th>

                                 </tr>
                                 <tr>
                                        <th>
                                                <h3>Category</h3>
                                       </th>
                                       <th style="background-color:white">
                                            <t t-esc="doc.cat.name"/>
                                       </th>

                                 </tr>

                             </table>
                             <table class="table table-condensed" style="width:45%;float:right">
                                 <tr>
                                      <th colspan="2">
                                          <center>
                                              <h1>Contact Detail</h1>
                                          </center>
                                        </th>
                                 </tr>
                                 <tr>
                                       <th style="width:150px;">
                                           <h3>Reference</h3>

                                       </th>
                                       <th style="background-color:white">
                                           <t t-esc="doc.reference_id.name"/>

                                       </th>

                                 </tr>
                                 <tr>
                                        <th>
                                            <h3>Employee</h3>

                                       </th>
                                       <th style="background-color:white">
                                           <t t-esc="doc.employee_id.name"/>

                                       </th>

                                 </tr>
                                 <tr>
                                        <th>
                                                <h3>Department</h3>
                                       </th>
                                       <th style="background-color:white">
                                            <t t-esc="doc.department_id.name"/>
                                       </th>

                                 </tr>

                             </table>
                               <style>

                                    table {
                                      border-collapse: collapse;
                                    }

                                    table, td, th {
                                      border: 1px solid black;
                                    }
                                    table{
                                      background-color: #e9e9e9;
                                    }


                                </style>
                        </div>
                    </div>


             </t>
         </t>
    </template>
    </data>
</openerp>