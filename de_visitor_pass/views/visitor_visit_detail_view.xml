<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--		form view for visit category-->
		<record id="view_visitor_detail_form" model="ir.ui.view">
			<field name="name">visit.detail.form</field>
			<field name="model">visit.detail</field>
			<field name="arch" type="xml">
				<form string="Visitor Detail">
					<header>
                        <button string="Check In" type="object" name="set_checkIn" class="btn btn-primary" attrs="{'invisible': [('state','!=','draft')]}"/>
                        <button string="Check Out"   type="object" name="set_checkOut"  class="btn btn-primary" attrs="{'invisible': [('state','!=','in')]}"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,in,out"/>
					</header>
					<sheet>
						<div>
							<h1>
								<field name="name" readonly="1"/>
							</h1>
						</div>
						<group>
							<group string="Visitor Detail">

										<field name="det_name"/>
										<field name="det_company"/>
										<field name="phone_no"/>
										<field name="mail"/>

							</group>
							<group string="Check In/Out">

										<field name="check_in"/>
										<field name="check_out"/>

							</group>

						</group>
						<group>
							<group string="Visit Detail">

										<field name="des"/>
										<field name="dur"/>
										<field name="cat"/>

							</group>

							<group string="Contact Detail">

										<field name="reference_id"/>
										<field name="employee_id"/>
										<field name="department_id"/>

							</group>
						</group>
						<notebook>
							<page string="Purpose">
								<group>
									<field name="comment" nolabel="1"/>
								</group>
							</page>
						</notebook>

					</sheet>

				</form>
			</field>
		</record>


		<record id="view_visitor_detail_tree" model="ir.ui.view">
			<field name="name">visit.detail.tree</field>
			<field name="model">visit.detail</field>
			<field name="arch" type="xml">
				<tree string="Visit Detail Tree">
					<field name="name" readonly="1"/>
					<field name="det_name"/>
					<field name="det_company"/>
					<field name="phone_no"/>
					<field name="mail"/>
					<field name="check_in"/>
					<field name="check_out"/>
					<field name="des"/>
					<field name="dur"/>
					<field name="cat"/>
					<field name="reference_id"/>
					<field name="employee_id"/>
					<field name="department_id"/>
				</tree>
			</field>
		</record>

		<record id="view_visitor_detail_search" model="ir.ui.view">
			<field name="name">visit.detail.search</field>
			<field name="model">visit.detail</field>
			<field name="arch" type="xml">
				<search string="Visit detail search">
					<field name="name" readonly="1"/>
					<field name="det_name"/>
					<field name="det_company"/>
					<field name="phone_no"/>
					<field name="mail"/>
					<field name="check_in"/>
					<field name="check_out"/>
					<field name="des"/>
					<field name="dur"/>
					<field name="cat"/>
					<field name="reference_id"/>
					<field name="employee_id"/>
					<field name="department_id"/>
				</search>
			</field>
		</record>


		<record id="action_visit_detail_view" model="ir.actions.act_window">
            <field name="name">Visitor Detail</field>
            <field name="res_model">visit.detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_visitor_detail_search"/>
            <field name="view_id" ref="view_visitor_detail_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Visit Detail
                </p>
            </field>
        </record>
</odoo>


