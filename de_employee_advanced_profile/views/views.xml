<!--			-->
			</xpath>
        </field>
    </record>


	  <record id="hr_employee_form_view" model="ir.ui.view">
			<field name="name">hr.employee.form.inherit</field>
			<field name="model">hr.employee</field>
              <field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='hr_settings']" position='after'>

				<page string="Documents">
					<!--	relation id  -->
					<field name="document_lines">
						<tree editable="bottom">
							<field name="doc_type"/>
							<field name="doc_number"/>
							<field name="issue_date"/>
							<field name="expiry_date"/>
						</tree>
					</field>
				 </page>
<!--					<page string="Employee Family">-->
<!--					&lt;!&ndash;	relation id  &ndash;&gt;-->
<!--					<field name="experience_lines">-->
<!--						<tree editable="bottom">-->
<!--							<field name="company"/>-->

<!--						</tree>-->
<!--					</field>-->
<!--				 </page>-->


				<page string="Dependents">
				<!-- 	relation id   -->
					<field name="dependents_lines">
					<tree editable="bottom">
						<field name="name"/>
						<field name="date_Of_birth"/>
						<field name="relationship"/>
					</tree>
					</field>
				</page>
				<page string="Attachment">
					<!--	relation id  -->
					<field name="attachment_lines">
						<tree editable="bottom">
							<field name="attachment"/>
						</tree>
					</field>
				 </page>
				</xpath>
			</field>
		</record>
