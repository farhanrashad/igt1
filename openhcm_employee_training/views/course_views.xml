<odoo>
  <data>
    <record model="ir.ui.view" id="courses_tree_view">
            <field name="name">hr.employee.training.course.tree</field>
            <field name="model">hr.employee.training.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="trainer_id"/>
                    <field name="company_id"/>
                    <field name="amount"/>

                </tree>
            </field>
        </record>
      
      
      <record model="ir.ui.view" id="course_form_view">
            <field name="name">hr.employee.training.course.form</field>
            <field name="model">hr.employee.training.course</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="amount"/>
                                <field name="company_id" widget="selection"/>
                            </group>
                            <group>
                                <field name="trainer_id"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Reason">
                                <group>
                                    <field name="note"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
<!--                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>
      
    <record id="course_menu_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.training.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a New Course 
            </p>
        </field>
    </record>
      
    <menuitem name="Training" id="training_main_menu" parent="training_root_menu"  sequence="0"/>
    <menuitem name="Course" id="course_sub_menu" parent="training_main_menu" action="course_menu_action" sequence="1"/>
  </data>
</odoo>