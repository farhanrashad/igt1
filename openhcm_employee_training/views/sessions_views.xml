<odoo>
  <data>
      <record model="ir.ui.view" id="sessions_tree_view">
            <field name="name">hr.employee.training.session.tree</field>
            <field name="model">hr.employee.training.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="delivery_location"/>
                    <field name="delivery_method"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>
      
      
      <record model="ir.ui.view" id="sessions_form_view">
            <field name="name">hr.employee.training.session.form</field>
            <field name="model">hr.employee.training.session</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_process" states="draft" string="Process" type="object"/>
                        <button name="action_session_send" states="approval,scheduled" string="Send by Email" type="object"/>
                        <button name="action_schedule" states="scheduled" string="Schedule" type="object"/>
                        <button name="action_completed" states="scheduled" string="End Session" type="object"/>
                        <button name="action_pending" states="pending" string="Pending" type="object"/>
                        <button name="action_close" states="pending,approval,scheduled" string="Cancel" type="object"/>


                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,approval,scheduled,completed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="delivery_location"/>
                                <field name="delivery_method" widget='selection' />
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="note"/>
                                </group>
                            </page>
                            <page string="Trainers">
                                <field name="trainer_lines">
                                    <tree editable="bottom">
                                        <field name="trainer_id"/>
                                        <field name="session_id" invisible="1"/>    
                                    </tree>
                                </field>
                            </page>
                            <page string="Participants">
                                <field name="participants_lines">
                                    <tree editable="bottom">
                                        <field name="employee_id"/>
                                        <field name="session_id" invisible="1"/>    
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
<!--                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>
      
    <record id="sessions_menu_action" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.training.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a New Sessions 
            </p>
        </field>
    </record>
    <menuitem name="Training" id="training_root_menu" sequence="3"
              web_icon="openhcm_employee_training,static/description/icon.png"/> 
    <menuitem name="Sessions" id="sessions_main_menu" parent="training_root_menu"  sequence="1"/>
    <menuitem name="Sessions" id="sessions_sub_menu" parent="sessions_main_menu" action="sessions_menu_action" sequence="1"/>
  </data>
</odoo>