<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data >
        <!--Email template -->
        <record id="email_template_edi_sessions_case" model="mail.template">
            <field name="name">Disciplinay Case: Send by email</field>
            <field name="model_id" ref="openhcm_employee_training.model_hr_employee_training_session"/>
            <field name="email_from">${(object.participants_lines.email_formatted or user.email_formatted) |safe}</field>
            <field name="partner_to">${object.trainer_lines.id}</field>
            <field name="subject">Sessions (Ref ${object.name or 'n/a'})</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear ${object.participants_lines.name},
        <br /><br />
        Here is your
        % if object.name:
            Sessions <strong>${object.name}</strong>
        % else:
            Sessions
        <br /><br />
        Do not hesitate to contact us if you have any questions.
    </p>
</div>
            </field>
<!--             <field name="report_template" ref="employee_disciplinary_case"/>
            <field name="report_name">Case_${(object.name or '').replace('/','_')}</field> -->
<!--             <field name="lang">${object.employee_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/> -->
        </record>
    </data>
</odoo>
