                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-12">
                                        <strong><t t-esc="record.name.value"/></strong>
                                    </div>
                                </div>
                                <t t-if="record.is_quality.value">
                                    <hr class="mt8 mb8"/>
                                    <t t-esc="record.is_quality.value"/>
