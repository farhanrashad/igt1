<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="gate_pass_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                            
                <div class="pos-center-align" style="text-align: center;">
                    <h2><t t-esc="docs.name"/></h2>
                </div>
                
                <br/>
<div>
<div style="width: 50%; float:left; ">
<tr><th><b>Schadule Date:</b></th> <td> <t t-esc="docs.scheduled_date"/> </td> </tr> <br/>
<tr><th><b>Reference:</b></th> <td> <t t-esc="docs.origin"/> </td> </tr>
</div>
<div style="width: 20%; float:right; ">
<tr><th><b>Driver:</b></th> <td> <t t-esc="docs.driver_name"/> </td> </tr> <br/>
<tr><th><b>Vehicle:</b></th> <td> <t t-esc="docs.vehicle_no"/> </td> </tr>
</div>
</div>
                <br/><br/>
                
<!--                     <div class="centered">
                        <center>
                            <b>
                                <p style="border-style: solid;">Sale Receipt</p>
                            </b>
                        </center>
                    </div> -->
                
               
                
