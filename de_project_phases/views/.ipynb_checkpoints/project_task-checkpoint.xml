<odoo>
  <data>
      
    <record id="project_task_form_search_view" model="ir.ui.view">
			<field name="name">project.task.form.view.search</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_search_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group" position="inside">
                    <filter string="Project Phases" name="phase_id" context="{'group_by': 'phase_id'}"/>
				</xpath>

			</field>
		</record>  
      
    <record id="project_task_form_view" model="ir.ui.view">
			<field name="name">project.task.form.view</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='project_id']" position="after">
					<field name="phase_id"/>
				</xpath>

			</field>
		</record>
      
      <record id="project_project_form_view_inherit" model="ir.ui.view">
			<field name="name">project.project.form.view</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.edit_project"/>
			<field name="arch" type="xml">
				
				<xpath expr="//div[@name='button_box']" position="inside">
					 <button name="phase_action" type="object" string="Phases" class="oe_stat_button"
                                    icon="fa-tasks">
<!--                                 <field name="notes_ad" string="Notes" widget="statinfo"/> -->
                            </button>
				</xpath>
			</field>
		</record>
  </data>
</odoo>
