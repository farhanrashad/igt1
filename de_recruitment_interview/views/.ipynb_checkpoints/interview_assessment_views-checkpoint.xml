      <record id="interview_assessment_search" model="ir.ui.view">
            <field name="name">hr.employee.interview.assessment.search</field>
            <field name="model">hr.employee.interview.assessment</field>
            <field name="arch" type="xml">
                <search string="Search Interview Assessment">
                    <field name="name" filter_domain="['|', '|', ('date', 'ilike', self), ('name', 'ilike', self), ('position_id', 'ilike', self)]" string="Reference"/>
                    <field name="date" string='Date'/>
                    <field name="position_id" string='Position'/>
                    <group expand="0" string="Group By">
                        <filter name="position_id" string="Position" domain="[]" context="{'group_by' : 'position_id'}" />
                    </group>
                </search>
            </field>
        </record>
      
