      <record model="ir.ui.view" id="interview_assessment_form_view">
            <field name="name">hr.employee.interview.assessment.form</field>
            <field name="model">hr.employee.interview.assessment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
<!--                         <button name="action_waiting_case" states="draft" string="Process" type="object"/>
                        <button name="action_case_send" states="waiting" string="Send by Email" type="object"/>
                        <button name="action_close_case" states="waiting,response" string="Close Case" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting,response,close"/> -->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="position_id"/>
                                <field name="phone"/>
                                <field name="address"/>
                                <field name="work"/>
                                <field name="age"/>
                                <field name="martial_status" widget='selection'/>
                                <field name="family_origin"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="department_id"/>
                                <field name="last_job"/>
                                <field name="business_type"/>
                                <field name="notice_period"/>
<!--                                 <field name="martial_status"/>
                                <field name="family_origin"/> -->
                            </group>
                        </group>
                        <notebook>
                            <page string="Criteria">
                                <group>
                                    <tree editable='bottom'>
                                        <field name="assessment_ds">
                                          <tree editable='bottom'>
                                            <field name="name"/>
                                            <field name="scope"/>
                                            <field name="remarks"/>
                                              
                                          </tree> 
                                        </field>
                                    </tree>    
                                </group>
                                <group>
                                <group>
                                    <field name="strength"/>
                                    
                                </group>
                                <group>
                                    <field name="weakness"/>
                                </group>
                               </group>
                                <group>
                                    <field name="comments"/>
                                 </group>
                                <group>
                                <group>
                                    <field name="suit_recruit" widget='selection'/>
                                    <field name="suit_develop" widget='selection'/>
                                </group>
                                <group>
                                    <field name="recruit_reservation" widget='selection'/>
                                    <field name="develop_reservation" widget='selection'/> 
                                </group>
                               </group>
                                <group>
                                <group>
                                    <field name="interviewer_id"/>
                                </group>
                                <group>
                                    <field name="date"/>
                                </group>
                               </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
      
